{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "EmbeddedDiploma_GCC",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/*.c",
				"-o",
				"${fileDirname}/embeddedDiploma.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"type": "shell",
			"label": "EmbeddedDiploma_CLANG",
			"command": "/usr/bin/clang",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${workspaceFolder}/*.c",
				"-o",
				"${fileDirname}/embeddedDiploma.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		}
	]
}